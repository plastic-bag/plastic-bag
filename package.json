{
  "name": "plastic-bag",
  "version": "0.0.2",
  "description": "A library to work with micro frontends.",
  "author": "Thiago da Rosa de Bustamante <thiago@cruxframework.org>",
  "keywords": [
    "javascript",
    "typescript",
    "Web components",
    "micro frontend"
  ],
  "main": "./dist/index.js",
  "types": "./dist/plastic-bag.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --env.test --port 8001 --devtool=inline-source-map --debug",
    "start:coverage": "webpack-dev-server --env.test --port 8001 --devtool=inline-source-map --debug --config webpack.config.tests.js",
    "build": "npm run clean && npm run webpack:polyfills",
    "clean": "rimraf dist",
    "webpack": "webpack --config webpack.config.js",
    "webpack:polyfills": "webpack --config webpack.config.polyfills.js",
    "format": "prettier --write '{webpack*.js,src/**/*.ts,test/**/*.ts}'",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "prepublish": "npm run build",
    "test": "concurrently --kill-others --success first -n server,test \"npm start\" \"cross-env NODE_ENV=test ./node_modules/.bin/wdio ./wdio.conf.js\"",
    "test:coverage": "concurrently --kill-others --success first -n server,test \"npm run start:coverage\" \"cross-env NODE_ENV=coverage nyc ./node_modules/.bin/wdio ./wdio.conf.js\""
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "statements": 100,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "cache": true,
    "report-dir": "./reports/coverage",
    "sourceMap": false,
    "instrument": false
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.0",
    "@types/webdriverio": "^4.10.5",
    "chromedriver": "^2.43.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-loader": "^5.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1",
    "wdio-browserstack-service": "^0.1.18",
    "wdio-chromedriver-service": "^0.1.3",
    "wdio-mocha-framework": "^0.6.3",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.13.2",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/micro-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/thiagobustamante/micro-frontend/issues"
  },
  "dependencies": {
    "es6-promise": "^4.2.5",
    "tslib": "^1.9.3",
    "whatwg-fetch": "^3.0.0"
  }
}
